<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
      <p id="notice"></p>
      <h2>\\Member information change!!//<i class="fas fa-pencil-alt"></i></h2>

      <%= form_with model: @member, url: edit_mypage_path, method: :patch do |f| %>
        <table class ='table'>
          <tr>
            <th>Name</th>
            <td><%= f.text_field :name, class:"col-6" %></td>
          </tr>
          <tr>
            <th>Nick Newame</th>
            <td><%= f.text_field :nick_name, class:"col-6" %></td>
          </tr>
          <tr>
            <th>Image</th>
            <td><%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %></td>
          </tr>
          <tr>
            <th>Introduction</th>
            <td><%= f.text_area :introduction, class:"col-6" %></td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit '情報を更新する', class: "btn btn-outline-secondary col-6" %>
        </div>
      <% end %>
        <div class="text-center mt-3">
          <%= link_to members_confirm_path, class: "btn custom-button btn-outline-danger col-6" do %>
          退会する
          <% end %>
        </div>
  </div>
</div>
