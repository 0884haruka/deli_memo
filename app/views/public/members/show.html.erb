<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>\\Contributor!!//</h2>
      <%= image_tag current_member.get_profile_image(100,100) %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>\\Nick Name!!//</th>
              <th><%= current_member.nick_name %></th>
            </tr>
            <tr>
              <th>\\introduction!!//</th>
              <th><%= current_member.introduction %></th>
            </tr>
          </tbody>
        </table>
    <div class="row">
      <%= link_to edit_mypage_path, class: 'btn btn-outline-secondary btn-block edit_user_108038' do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
      <h2 class="mt-2">\\Follow!!//</h2>
      <h2 class="mt-2">\\Follower!!//</h2>
    <div class="col-md-9 ">
    <ul style="list-style: none;">
      <li>
        <%= link_to new_review_path, class: "btn custom-button" do %>
          <h2>
            <i class="fas fa-plus"></i>
            \\New Review!!//<i class="fas fa-pencil-alt"></i>
          <h2>
          <h6>Click here to register for review!!</h6>
        <% end %>
      </li>
    </ul>
  
  <h2 class="mt-3">\\5 new posts!!!//</h2>
  <table class="table table-hover">
    <tr>
      <th class="custom-header"></th>
      <th class="custom-header"></th>
      <th class="custom-header">商品名</th>
      <th class="custom-header">お値段</th>
      <th class="custom-header">掲載の有無</th>
      <th class="custom-header"></th>
      <th class="custom-header"></th>
    </tr>
    <% @member_reviews.each do |review| %>
    <tr>
      <td>
        <% if @current_time < review.created_at.since(7.days) %>
          <div class = "new-mark">
            <%= image_tag("new.png", alt: "new", width: "40", height: "40") %></div>
          </div>
        <% end %>
      </td>
      <td><%= image_tag review.review_image.variant(resize:'100x100') if review.review_image.attached? %></td>
      <td><%= review.title %></td>
      <td><%= review.price%>円</td>
      <td>
        <% if review.is_active == true %>
          掲載
        <% end %>
        <% if review.is_active == false %>
          未掲載
        <% end %>
      </td>
      <td>
         <% if review.liked_by?(current_member) %>
            <p>
              <%= link_to review_likes_path(review), method: :delete do %>
                ♥<%= review.likes.count %> いいね
              <% end %>
            </p>
            <% else %>
            <p>
              <%= link_to review_likes_path(review), method: :post do %>
                ♡<%= review.likes.count %> いいね
              <% end %>
            </p>
          <% end %>
      </td>
      <td><p><%= link_to "#{review.comments.count} コメント", review_path %></p></td>
    </tr>
    <% end %>
  </table>
  </div>
    <div class="text-right">
    <%= link_to reviews_path, class: "btn custom-button" do %>
      <h2>
        <i class="fas fa-clipboard-list"></i>
        \\Review List!!//<i class="far fa-hand-point-up"></i>
      <h2>
      <h6>Let's go!!</h6>
      <% end %>
    </div>
  </div>
</div>
