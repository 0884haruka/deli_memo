<p id="notice"></p>
<div class="container">
  <div class="row">
      <div class="col-md-2">
        <h2>最新のレビュー</h2>
      </div>
      <div class="col-md-6 offset-md-1">
        <h2>レビューの投稿</h2>
        <h2 class="mt-3">レビュー一覧</h2>
    <ul style="list-style: none;">
      <li>
        <%= link_to new_review_path, class: "btn custom-button" do %>
          <i class="fas fa-plus"></i>
          新規投稿はこちら
        <% end %>
      </li>
    </ul>
  </div>
  <table class="table table-hover">
    <tr>
      <th class="custom-header"></th>
      <th class="custom-header">商品名</th>
      <th class="custom-header">お値段</th>
      <th class="custom-header">地域</th>
      <th class="custom-header">書譜品ジャンル</th>
    </tr>
    <% review.each do |review| %>
      <tr class="table-link" data-href="/admin/items/<%= item.id %>">
        <td><%= item.id %></td>
        <td><%= item.item_name %></td>
        <td>¥<%= number_with_delimiter(item.price) %></td>
        <td><%= item.genre.genre_name %></td>
        <td>
          <% if item.is_active == true %>
            掲載
          <% end %>
          <% if item.is_active == false %>
            未掲載
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="d-flex justify-content-center custom-pagination">
    <%= paginate @items, class: "custom-pagination" %>
  </div>
      <div class="col-md-2 offset-md-1">
        <h2>フォロー</h2>
        <h2 class="mt-3">フォロワー</h2>
      </div>
      
  </div>
</div>
