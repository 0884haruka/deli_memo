<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"></p>
      <h2 class="mt-3">review details</h2>
    </div><!-- title -->
    <!-- left container start -->
    <div class="col-md-3 mt-5">
      <p><%= image_tag(@review.review_image.variant(resize:'300x300'), class: "w-100") if @review.review_image.attached? %></p>
    </div>
    <!-- left container end -->
    <!-- right container start  -->
    <div class="col-md-9">
      <table class="table table-hover mt-5">
    <!--<table class="table table-hover">どちらにしようか考え中-->
      <tr>
        <th>投稿者</th>
        <td>
          <!--投稿者のページへ遷移させたい-->
          <div class="text-center">
            <%=link_to mypage_path(@review.member.id), class: "text-decoration-none text-dark"  do %>
              <%= image_tag @review.member.get_profile_image(100,100) %><br />
               <i class="far fa-user text-danger"></i><%= @review.member.nick_name %>
            <% end %>
          </div>
        </td>
        <td>
          <% if current_member.following?(@member) %>
            <%= link_to "フォロー外す", relationships_path(member_id: @member.id), method: :delete, class: "text-decoration-none text-dark" %>
          <% else %>
            <%= link_to "フォローする", relationships_path(member_id: @member.id), method: :post, class: "text-decoration-none text-dark" %>
          <% end %>
        </td>
        <td>
          <% if @review.liked_by?(current_member) %>
          <p>
            <%= link_to review_likes_path(@review), method: :delete, class: "text-decoration-none text-dark" do %>
              <i class="text-danger ">♥</i><%= @review.likes.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to review_likes_path(@review), method: :post, class: "text-decoration-none text-dark" do %>
              <i class="text-danger">♡</i><%= @review.likes.count %> いいね
            <% end %>
          </p>
          <% end %>
        </td>
        <td>
          <% if @review.bookmarked_by?(current_member) %>
            <%= link_to "ブックマークを外す", review_bookmarks_path(@review), method: :delete, class: "text-decoration-none text-dark" %>
          <% else %>
          <%= link_to "ブックマークする", review_bookmarks_path(@review), method: :post, class: "text-decoration-none text-dark" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>商品名</th>
        <td><%= @review.title %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>レビュー内容</th>
        <td colspan ="4"><%= @review.body %></td>
      </tr>
      <tr>
        <th>お値段（税込）</th>
        <td><%= @review.price%>円</td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>地域</th>
        <td><%= @review.prefecture %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>食品カテゴリー</th>
        <td><%= @review.food_category%></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th>掲載の有</th>
        <td>
          <% if @review.is_active == true %>
            掲載
          <% end %>
          <% if @review.is_active == false %>
            未掲載
          <% end %>
        </td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </table>
    </div>
    <!-- right container end -->

    <!--left container start -->
    <div class="col-md-3">
      <div class="comment">
        <% if flash[:alert] %>
        <div class="alert text-danger">
          <%= flash[:alert] %>
        </div>
        <% end %>
        <i class="far fa-comment-alt text-danger"></i>コメント件数：<%= @review.comments.count %>
        <%= form_with model: [@review, @comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "w-100" %>
          <div class="text-right"><%= f.submit "送信する", class: "btn btn-outline-secondary"  %></div>
        <% end %>
      </div>
    </div>
    <!--left container end -->

    <!--right container start-->
    <div class="col-md-8 offset-md-1">
      <ul>
        <% @review.comments.each do |comment| %>
        <li class="row">
          <div class="col-3">
            <div class ="text-center"><%= image_tag comment.member.get_profile_image(100,100) %></div>
            <div class ="text-center"><%= comment.member.nick_name %></div>
          </div>
          <div class="col-9">
            <div class="text-right"><%= comment.created_at.strftime('%Y/%m/%d') %></div>
            <div><%= comment.comment %></div>
            <div class="text-right">
              <% if comment.member == current_member %>
                <%= link_to "削除", review_comment_path(comment.review, comment), method: :delete, class: "btn btn-outline-danger btn-sm" %>
              <% end %>
            </div>
          </div>
        </li>
        <% end %>
      </ul>

      <% if @member == current_member %>
      <div class = "text-center">
        <%= link_to "編集する", edit_review_path, class: "btn btn-outline-secondary col-6" %>
      </div>
      <div class = "text-center mt-3">
        <%= link_to "削除する", review_path(@review), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-outline-danger col-6" %>
      </div>
      <% end %>
    </div>
    <!--right container end-->
  </div>
</div>





