<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <!--検索、タグ検索機能-->

    <% if member_signed_in? %>
      <div class="search_form text-right">
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    <% end %>

    <div class="form-inline text-right">
      <!--右寄りにならない。。(´；Д；`)-->
      <%= form_tag({ controller: 'reviews', action: 'index' }, method: :get) do %>
        <%= select_tag :prefectur_search, options_from_collection_for_select(@tag_prefectures, 'prefecture', 'prefecture'), include_blank: '都道府県を選択してください' %>
        <%= submit_tag '検索する', class: 'btn btn-outline-secondary mx-2' %>
      <% end %>
   &emsp;&emsp;&emsp;&emsp;
  
      <%= form_tag({ controller: 'reviews', action: 'index' }, method: :get) do %>
        <%= select_tag :food_category_search, options_from_collection_for_select(@tag_food_category, 'food_category', 'food_category'), include_blank: 'フードカテゴリーを選択してください' %>
        <%= submit_tag '検索する', class: 'btn btn-outline-secondary mx-2' %>
      <% end %>
    </div>

    <ul style="list-style: none;">
      <% if current_member.name != "guestuser" %>
      <li>
        <%= link_to new_review_path, class: "btn custom-button" do %>
          <h2>
            <i class="fas fa-plus text-danger"></i>
            \\New Review!!//<i class="fas fa-pencil-alt "></i>
          </h2>
          <h6>Click here to register for review!!</h6>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
  <h2 class="mt-3">
        <i class="fas fa-clipboard-list"></i>
        \\Review List!!//<i class="far fa-hand-point-up"></i>
  </h2>
  <table class="table table-hover">
    <tr>
      <th class="custom-header"></th>
      <th class="custom-header"></th>
      <th class="custom-header">商品名</th>
      <th class="custom-header">お値段</th>
      <th class="custom-header"></th>
      <th class="custom-header"></th>
    </tr>
    <% @reviews.order(created_at: :desc).each do |review| %>
    <!--新着から呼び出す-->
    <tr>
      <td>
        <% if @current_time < review.created_at.since(7.days) %>
          <div class = "new-mark">
            <%= image_tag("new.png", alt: "new", width: "40", height: "40") %></div>
          </div>
        <% end %>
      </td>
      <td><%= image_tag review.review_image.variant(resize:'100x100') if review.review_image.attached? %></td>
      <td><%= review.title %></td>
      <td><%= review.price%>円</td>
      <td>
        <% if review.liked_by?(current_member) %>
        <p>
          <%= link_to review_likes_path(review), method: :delete, class: "text-decoration-none text-dark" do %>
            <i class="text-danger ">♥</i><%= review.likes.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to review_likes_path(review), method: :post, class: "text-decoration-none text-dark" do %>
            <i class="text-danger">♡</i><%= review.likes.count %> いいね
          <% end %>
        </p>
      <% end %>
      </td>
      <td><p><%= link_to review_path(review.id), class: "text-decoration-none text-dark" do %>
            <i class="far fa-comment-alt text-danger"></i> <%=review.comments.count %> コメント
            <% end %></p>
      </td>
      <td>
        <%= link_to review_path(review.id), class: "text-decoration-none text-dark" do %>
        \\Show//<i class="far fa-hand-point-up text-danger"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
<%#= paginate @reviews %>
  </div>
</div>
