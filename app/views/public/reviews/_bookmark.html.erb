<% if review.bookmarked_by?(current_member) %>
  <%= link_to "ブックマークを外す", review_bookmarks_path(review), method: :delete, remote: :true, class: "text-decoration-none text-dark" %>
<% else %>
  <%= link_to "ブックマークする", review_bookmarks_path(review), method: :post, remote: :true, class: "text-decoration-none text-dark" %>
<% end %>

