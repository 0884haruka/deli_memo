<div class="container">
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">新規会員登録</h5>
        <div class="form-body p-5">
          <div class="mx-auto text-center">
            こちらにお名前、ニックネーム、メールアドレス<br>
            パスワードのご登録お願いします。
          </div>
          <%= form_with model: @member, url: member_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>

          <div class="input-group mb-3 mt-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="far fa-smile"></i></span>
            </div>
            <%= f.text_field :nick_name, autofocus: true, class: "form-control", placeholder: "ニックネーム" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <% if @minimum_password_length %>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputEmail", placeholder:"パスワード #{@minimum_password_length} ケタ以上" %>
          </div>
          
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="far fa-check-square"></i></span>
              </div>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputEmail", placeholder:"パスワード確認" %>
            </div>

            <div class="actions">
              <%= f.submit "登録する" ,class:"btn btn-block btn-secondary mt-3 mb-3" %>
            </div>
          <%= render "public/shared/links" %>

          <% end %>

        </div>
    </div>
  </div>
</div>

