<div class="container">
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">ログイン</h5>
      <div class="form-body p-5">
        <div class="mx-auto text-center">
            メールアドレス、パスワードのご入力お願いします。
        </div>
        <%= form_with model: @member,url: new_member_session_path do |f| %>
          <div class="input-group mb-3 mt-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-lock"></i></span>
            </div>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> ケタ以上)</em>
              <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputEmail", placeholder:"パスワード" %>
          </div>

            <div class="actions">
              <%= f.submit "ログインする" ,class:"btn btn-block btn-secondary mt-3" %>
            </div>
          <%= render "public/shared/links" %>
        <% end %>

      </div>
    </div>
  </div>
</div>


