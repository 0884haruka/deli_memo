<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice">
      	<%= notice %>
      </p>
      <h2>\\Member List//</h2>
      <h5 class="d-inline highlight">会員一覧</h5>
      <div class="my-4">
        <table class="table table-hover">
          <tr>
            <th class="custom-header">会員ID</th>
            <th class="custom-header">ニックネーム</th>
            <th class="custom-header">メールアドレス</th>
            <th class="custom-header">メンバー詳細ページ</th>
          </tr>
           <% @members.each do |member| %>
            <tr class="table-link" data-href="/admin/member/<%= member.id %>">
              <td>
                <%= member.id %>
              </td>
              <td>
                <span class="text-dark text-decoration-underline">
                  <%= member.nick_name %>
                </span>
              </td>
              <td>
                <%= member.email %>
                </td>
                <td>
                <%= link_to admin_member_path(member.id), class: "text-decoration-none text-dark" do %>
                \\Member Details Page//　<i class="fas fa-mouse-pointer text-danger"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
        <div class="text-center">
            <%= link_to "ひとつ前に戻る", :back, class: "btn btn-outline-danger col-6" %>
        </div>
    </div>
  </div>
</div>
