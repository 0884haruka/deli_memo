<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"></p>
      <%= @member.nick_name %>さんの情報編集ページ
    </h5>
  </div>
	<%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
      <h6>お名前</h6>
      <div class = "form-group">
        <%= f.text_field :name %>
      </div>
      <h6>ニックネーム</h6>
      <div class = "form-group">
        <%= f.text_field :nick_name %>
      </div>
      <h6>Image</h6>
      <div class = "form-group">
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
      </div>
      <h6>Introduction</h6>
      <div class = "form-group">
        <%= f.text_area :introduction %>
      </div>
      <div class = "form-group">
        <%= f.submit 'Update User',class:"btn btn-secondary" %>
      </div>
    <% end %>
    </div>
		<%= link_to admin_members_path do %>
			<button class="btn custom-button">編集せずに戻る</button>
		<% end %>
  </div>
</div>
