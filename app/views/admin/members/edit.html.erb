<div class="container">
  <div class="row">
    <div class="col-md-12 form-center">
      <p id="notice"></p>
      <h3>\\<%= @member.nick_name %>さんの情報編集ページ!!//</h3>
	    <%= form_with model: @member, url: admin_member_path, method: :patch do |f| %>
      <h6>お名前</h6>
      <div class = "form-group">
        <%= f.text_field :name %>
      </div>
      <h6>ニックネーム</h6>
      <div class = "form-group">
        <%= f.text_field :nick_name %>
      </div>
      <h6>Profile Image</h6>
      <div class = "form-group">
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
      </div>
      <h6>Introduction</h6>
      <div class = "form-group">
        <%= f.text_area :introduction %>
      </div>
      <div class = "form-group">
        <%= f.submit '情報を更新する',class:"btn btn-outline-secondary col-6" %>
      </div>
    <% end %>
    </div>
		<%= link_to "編集せずに戻る",admin_member_path(@member.id), class: "btn btn-outline-danger col-6"  %>
		</div>
  </div>
</div>
